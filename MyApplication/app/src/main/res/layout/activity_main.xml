<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<Button
    android:layout_weight="1"
    android:id="@+id/home"
    android:textSize="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="首页推荐"></Button>
        <Button
            android:layout_weight="1"
            android:id="@+id/changshang"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="厂商列表"></Button>
        <Button
            android:layout_weight="1"
            android:id="@+id/chanpin"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="产品列表"></Button>
        <Button
            android:layout_weight="1"
            android:id="@+id/zhanhui"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="展会活动"></Button>
        <Button
            android:layout_weight="1"
            android:id="@+id/zhaopin"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="厂商招聘"></Button>
        <Button
            android:layout_weight="1"
            android:id="@+id/ruzhu"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="厂商入驻"></Button>
    </LinearLayout>
    <FrameLayout
        android:layout_weight="1"
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>