<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:src="@drawable/lun1"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
            <ImageView
                android:src="@drawable/lun2"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
            <ImageView
                android:src="@drawable/lun3"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
            <ImageView
                android:src="@drawable/lun4"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
            <ImageView
                android:src="@drawable/lun5"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </ViewFlipper>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:background="#FF0000"
                android:layout_width="20dp"
                android:layout_height="match_parent"></LinearLayout>
            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:text="推荐厂商"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                android:layout_width="300dp"
                android:layout_height="match_parent"></ImageView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="40dp"
                    android:text="图灵智造"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="是由上海交通大学出资组建的高新技术企业，旗下拥有1978年创建的意大利RRRobotica子公司，研发出了多款智能工业化图灵机器人，商标号（15990245）。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/img_1"
                android:layout_width="300dp"
                android:layout_height="match_parent"></ImageView>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="40dp"
                    android:text="科大智能"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="科大智能科技股份有限公司成立于2002年，2011年在深交所创业板挂牌上市(SZ.300222)，公司是国内知名的智能工业、智能配电网整体解决方案供应商之一。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/img_2"
                android:layout_width="300dp"
                android:layout_height="match_parent"></ImageView>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="40dp"
                    android:text="Oppo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="OPPO，全称OPPO广东移动通信有限公司，由陈明永先生等人于2004年创立，是一家全球领先的智能终端制造商和移动互联网服务提供商，业务遍及50多个国家和地区。通过40多万个销售网点及2500个服务中心，与全球用户共享科技之美。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/img_3"
                android:layout_width="300dp"
                android:layout_height="match_parent"></ImageView>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="40dp"
                    android:text="TCL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="TCL科技集团股份有限公司成立于1982年，总部位于广东惠州，主营业务是半导体、电子产品及通讯设备、新型光电、液晶显示器件，货物或技术进出口"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/img_4"
                android:layout_width="300dp"
                android:layout_height="match_parent"></ImageView>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="40dp"
                    android:text="达闼科技"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="深圳前海达闼科技有限公司（CLOUDMINDSInc.）是中国（美国、东京分公司）的一家云端智能机器人公司，总部位于北京朝阳区望京SOHO。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:background="#FF0000"
                android:layout_width="20dp"
                android:layout_height="match_parent"></LinearLayout>
            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:text="推荐产品与解决方案"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/img_5"
                android:layout_width="300dp"
                android:layout_height="match_parent"></ImageView>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="40dp"
                    android:text="智慧边海防整体解决方案"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="智慧边海防整体解决方案则利用物联网、大数据、云计算、边缘计算、人工智能、移动互联网等新一代信息技术，构建基于陆、海、空、天并结合边民大众的五类立体化感知系统。将多种航天高性能、高质量和高可靠性的智能化装备应用到了海域防护方面。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/img_6"
                android:layout_width="300dp"
                android:layout_height="match_parent"></ImageView>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="40dp"
                    android:text="华为智慧园区解决方案"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="园区是工作与生活的载体，是经济发展的核心抓手，是构建万物互联的智能世界的落脚点。
传统园区的信息化往往是孤立的烟囱式子系统建设，数据不互通，业务难融合，长期面临着服务体验差、综合安防弱、运营效率低、管理成本高、业务创新难等痛点。
华为智慧园区解决方案源于自身管理变革和数字化转型实践，依托数字平台，联合生态伙伴，实现园区整体智慧化，使能业务创新，提升运营效率，引领至简体验。
"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>








    </LinearLayout>
</ScrollView>
</LinearLayout>